<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="AnchorPane" prefHeight="300" prefWidth="420" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <center>
        <HBox alignment="center">
            <VBox alignment="center">
                <VBox alignment="center">
                    <Label fx:id="yourLabel" text="Your's card" />
                    <Label fx:id="playerCardsLabel" />
                </VBox>
                <VBox alignment="center">
                    <Label fx:id="croupierLabel" text="Croupier's card" />
                    <Label fx:id="croupierCardsLabel" />
                </VBox>
            </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0" />

            <VBox alignment="center">
                <Button fx:id="buttonStart" onAction="#startEvent" text="Start Game" />
                <Button fx:id="buttonHit" onAction="#hitEvent" text="Hit me!" />
                <Button fx:id="buttonStand" onAction="#standEvent" text="Stand" />
            </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0" />
        </HBox>
    </center>
    <bottom>
        <Label fx:id="infoLabel" text="" />
    </bottom>
</BorderPane>